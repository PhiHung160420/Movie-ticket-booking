<!-- ==========Sign-In-Section========== -->
<section class="account-section bg_img" data-background="./User/images/account/account-bg.jpg">
    <div class="container">
        <div class="padding-top padding-bottom">
            <div class="account-area">
                <div class="section-header-3">
                    <h2 class="title">Đăng nhập</h2>
                </div>
                <form class="account-form">
                    <div class="form-group">
                        <label for="username">Tên đăng nhập</label>
                        <input type="text" placeholder="Nhập vào tên đăng nhập" id="username" required>
                    </div>
                    <div class="form-group">
                        <label for="pass3">Mật khẩu</label>
                        <input type="password" placeholder="nhập vào mật khẩu" id="pass3" required>
                    </div>
                    <div class="form-group checkgroup">
                        <input type="checkbox" id="bal2" required checked>
                        <label for="bal2">Lưu thông tin</label>
                        <a href="#0" class="forget-pass">Quên mật khẩu</a>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Đăng nhập">
                    </div>
                </form>
                <div class="option">
                    Bạn chưa có tài khoản? <a href="/user/sign-up">Đăng ký</a>
                </div>
                <div class="or"><span>Or</span></div>
                <ul class="social-icons">
                    <li>
                        <a href="#0">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#0" class="active">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#0">
                            <i class="fab fa-google"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- ==========Sign-In-Section========== -->