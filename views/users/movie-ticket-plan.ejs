<!-- ==========Book-Section========== -->
<section class="book-section bg-one">
    <div class="container">
        <form action="/user/movie-ticket-plan" class="ticket-search-form two" method="POST">
            <div class="form-group">
                <div class="thumb">
                    <img src="/user/images/ticket/cinema.png" alt="ticket">
                </div>
                <span class="type">Chọn phim</span>
                <select class="select-bar" name="select_movie_name">
                    <% if(listMovies) {%>
                        <% listMovies.map(movie => { %>
                    <option value="<%= movie.name %>"><%= movie.name %></option>
                    <% })} %>
                </select>
            </div>
            <div class="form-group">
                <div class="thumb">
                    <img src="/user/images/ticket/city.png" alt="ticket">
                </div>
                <span class="type">Chọn rạp</span>
                <select class="select-bar" name="select_theater_cluster">
                    <% if(listTheaterClusters) {%>
                        <% listTheaterClusters.map(theater_cluster => { %>
                            <option value="<%= theater_cluster.name %>"><%= theater_cluster.name %></option>
                    <% })}  %>
                </select>
            </div>
            <div class="form-group">
                <div class="thumb">
                    <img src="/user/images/ticket/date.png" alt="ticket">
                </div>
                <span class="type">Chọn ngày</span>
                <select class="select-bar" name="select_date">
                    <% if(listDate) {%>
                        <% listDate.map(date => { %>
                            <option value="<%= moment(date.schedule_date).format( 'DD-MM-YYYY') %>"><%= moment(date.schedule_date).format( 'DD-MM-YYYY') %></option>
                    <% })} %>
                </select>
            </div>
            <button type="submit" class="custom-button btn-search">Tìm kiếm</button>
        </form>
    </div>
</section>
<!-- ==========Book-Section========== -->

<!-- ==========Movie-Section========== -->
<div class="ticket-plan-section padding-bottom padding-top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 mb-5 mb-lg-0">
                <% if(listShowTimes) {%>
                    <ul class="seat-plan-wrapper bg-five">
                        <li>
                            <div class="movie-name">
                                <div class="icons">
                                    <i class="far fa-heart"></i>
                                    <i class="fas fa-heart"></i>
                                </div>
                                <a href="#0" class="name">
                                    <%=listShowTimes[0].movie.name %>
                                </a>
                                <div class="location-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                            </div>
                            <div class="movie-schedule">

                                <% listShowTimes.map(showtime => { %>
                                    <div class="item">
                                        <%= moment(showtime.start_time, "HH:mm:ss").format("HH:mm") %>
                                            -
                                            <%= moment(showtime.end_time, "HH:mm:ss").format("HH:mm") %>
                                    </div>
                                    <% }) %>
                            </div>
                        </li>

                    </ul>
                    <% } else if(errors.length > 0){ %>
                        <section class="window-warning">
                            <div class="lay"></div>
                            <div class="warning-item">
                                <h5 class="title"><%= errors[0] %></h5>
                                <a href="/user/movie-ticket-plan" class="custom-button seatPlanButton">Tiếp tục<i
                                    class="fas fa-angle-right"></i></a>
                            </div>  
                        </section>   
                    <% } %>
            </div>
        </div>
    </div>
</div>
<!-- ==========Movie-Section========== -->