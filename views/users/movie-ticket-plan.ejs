<!-- ==========Book-Section========== -->
<section class="book-section bg-one">
    <div class="container">
        <form action="/user/movie-ticket-plan" class="ticket-search-form two" method="POST">
            <div class="form-group">
                <div class="thumb">
                    <img src="/user/images/ticket/cinema.png" alt="ticket">
                </div>
                <span class="type">Chọn phim</span>
                <select class="select-bar" name="select_movie_name">
                    <% if(listMovies) {%>
                        <% listMovies.map(movie => { %>
                    <option value="<%= movie.movie_name %>"><%= movie.movie_name %></option>
                    <% })} else if(listShowTimes[0].movie.movie_name) { %>
                    <option value="dhaka"><%= listShowTimes[0].movie.movie_name %></option>
                    <% } else { %>
                        <option value="dhaka"></option>
                        <% } %>
                </select>
            </div>
            <div class="form-group">
                <div class="thumb">
                    <img src="/user/images/ticket/city.png" alt="ticket">
                </div>
                <span class="type">Chọn rạp</span>
                <select class="select-bar" name="select_theater_cluster">
                    <% if(listTheaterClusters) {%>
                        <% listTheaterClusters.map(theater_cluster => { %>
                            <option value="<%= theater_cluster.theater_clusters_name %>"><%= theater_cluster.theater_clusters_name %></option>
                    <% })} else if(listShowTimes[0].theater_cluster.theater_clusters_name) { %>
                        <option value="Venus"><%= listShowTimes[0].theater_cluster.theater_clusters_name %></option>
                    <% } else { %>        
                        <option value="Venus">Venus</option>
                        <% } %>           
                </select>
            </div>
            <div class="form-group">
                <div class="thumb">
                    <img src="/user/images/ticket/date.png" alt="ticket">
                </div>
                <span class="type">Chọn ngày</span>
                <select class="select-bar" name="select_date">
                    <% if(listDate) {%>
                        <% listDate.map(date => { %>
                            <option value="<%= moment(date.theater_clusters_movies_date).format( 'DD-MM-YYYY') %>"><%= moment(date.theater_clusters_movies_date).format( 'DD-MM-YYYY') %></option>
                    <% })} else if(listShowTimes[0].showtimes_date) { %>
                            <option value="<%= listShowTimes[0].showtimes_date %>"><%= moment(listShowTimes[0].showtimes_date).format('DD-MM-YYYY') %></option>
                    <% } else { %>
                        <option value="20-10-2020"></option>
                        <% } %>
                </select>
            </div>
            <button type="submit" class="custom-button btn-search">Tìm kiếm</button>
        </form>
    </div>
</section>
<!-- ==========Book-Section========== -->

<!-- ==========Movie-Section========== -->
<div class="ticket-plan-section padding-bottom padding-top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 mb-5 mb-lg-0">
                <ul class="seat-plan-wrapper bg-five">
                    <% if(listShowTimes) {%>
                        <% listShowTimes.map(showtime => { %>
                            <li>
                                <div class="movie-name">
                                    <div class="icons">
                                        <i class="far fa-heart"></i>
                                        <i class="fas fa-heart"></i>
                                    </div>
                                    <a href="#0" class="name">
                                        <%= showtime.movie.movie_name %>
                                    </a>
                                    <div class="location-icon">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </div>
                                </div>
                                <div class="movie-schedule">
                                    <div class="item">
                                        <%= moment(showtime.showtimes_start, "HH:mm:ss").format("HH:mm") %>
                                            -
                                            <%= moment(showtime.showtimes_end, "HH:mm:ss").format("HH:mm") %>
                                    </div>
                                </div>
                            </li>
                            <% })} else { %>
                                <li>
                                    <div class="movie-name">
                                        <div class="icons">
                                            <i class="far fa-heart"></i>
                                            <i class="fas fa-heart"></i>
                                        </div>
                                        <a href="#0" class="name">Genesis Cinema</a>
                                        <div class="location-icon">
                                            <i class="fas fa-map-marker-alt"></i>
                                        </div>
                                    </div>
                                    <div class="movie-schedule">
                                        <div class="item">
                                            09:40
                                        </div>
                                        <div class="item">
                                            13:45
                                        </div>
                                        <div class="item">
                                            15:45
                                        </div>
                                        <div class="item">
                                            19:50
                                        </div>
                                    </div>
                                </li>
                                <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- ==========Movie-Section========== -->