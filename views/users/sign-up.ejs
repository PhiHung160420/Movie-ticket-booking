<!-- ==========Sign-In-Section========== -->
<section class="account-section bg_img" data-background="/user/images/account/account-bg.jpg">
    <div class="container">
        <div class="padding-top padding-bottom">
            <div class="account-area">
                <div class="section-header-3">
                    <h2 class="title">Đăng ký</h2>
                </div>
                <form class="account-form">
                    <div class="form-group">
                        <label for="username">Họ Tên</label>
                        <input type="text" placeholder="Nhập vào họ tên" id="username" required>
                    </div>
                    <div class="form-group">
                        <label for="email2">Số điện thoại</label>
                        <input type="text" placeholder="Nhập vào số điện thoại" id="email2" required>
                    </div>
                    <div class="form-group">
                        <label for="email2">Email</label>
                        <input type="text" placeholder="Nhập vào email" id="email2" required>
                    </div>
                    <div class="form-group">
                        <label for="pass3">Mật khẩu</label>
                        <input type="password" placeholder="nhập vào mật khẩu" id="pass3" required>
                    </div>
                    <div class="form-group">
                        <label for="pass2">Xác nhận mật khẩu</label>
                        <input type="password" placeholder="Nhập lại mật khẩu" id="pass2" required>
                    </div>
                    <div class="form-group checkgroup">
                        <input type="checkbox" id="bal" required checked>
                        <label for="bal">Tôi đồng ý với điều khoản của bạn</label>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Đăng ký">
                    </div>
                </form>
                <div class="option">
                    Bạn đã có tài khoản? <a href="/user/sign-in">Đăng nhập</a>
                </div>
                <div class="or"><span>Or</span></div>
                <ul class="social-icons">
                    <li>
                        <a href="#0">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#0" class="active">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#0">
                            <i class="fab fa-google"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- ==========Sign-In-Section========== -->